		<div class="col-sm-4">
			<div class="card card-block">
				<h3 class="card-title">6 Pietri</h3>
				<p class="card-text">
					<i class="fa fa-list-ol"></i> Students: 19
					<br>
					<i class="fa fa-line-chart"></i> Mastery: 9%
				</p>
				<%= button_tag("Practice",
					type:"button",
					class: "btn btn-primary practice-btn") %>
			</div>
		</div>
		<div class="col-sm-4">
			<div class="card card-block">
				<h3 class="card-title">6 Trillin</h3>
